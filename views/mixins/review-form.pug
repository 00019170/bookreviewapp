mixin reviewForm(review = {}, bookId)
  form(method="POST" action=`/books/${bookId}/reviews`)
    .form-group
      label(for="author") Your Name:
      input.form-control(
        type="text"
        name="author"
        required
        value=review.author || ''
        placeholder="Enter your name"
      )

    .form-group
      label(for="title") Review Title:
      input.form-control(
        type="text"
        name="title"
        required
        value=review.title || ''
        placeholder="Enter review title"
      )

    .form-group
      label(for="content") Review Content:
      textarea.form-control(
        name="content"
        rows="5"
        required
        placeholder="Write your review here"
      )= review.content || ''

    .form-group
      label(for="rating") Rating:
      select.form-control(name="rating" required)
        option(value="" disabled selected) Select rating
        option(value="1") ★
        option(value="2") ★★
        option(value="3") ★★★
        option(value="4") ★★★★
        option(value="5") ★★★★★

    button.btn.btn-primary(type="submit") Submit